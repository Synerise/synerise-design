{
  "name": "@synerise/ds-description",
  "version": "0.2.54",
  "description": "Description UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@synerise/ds-avatar": "^0.13.19",
    "@synerise/ds-button": "^0.13.58",
    "@synerise/ds-core": "^0.30.11",
    "@synerise/ds-icon": "^0.44.8",
    "@synerise/ds-tooltip": "^0.10.44",
    "@synerise/ds-typography": "^0.11.5",
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "copy-to-clipboard": "^3.3.1",
    "react": ">=16.9.0 < 17.0.0"
  },
  "devDependencies": {
    "@synerise/ds-utils": "^0.16.8"
  }
}
