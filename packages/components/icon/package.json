{
  "name": "@synerise/ds-icon",
  "version": "0.20.0",
  "description": "Icon UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:svgr && npm run build:js && npm run build:css && npm run icon && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:icon": "node ./build/rename.js && node ./build/copy.js",
    "build:js": "babel --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:svgr": "node ./build/svgr.js",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "icon": "yarn build:icon",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "react": ">=16.9.0 < 17.0.0"
  },
  "devDependencies": {
    "@svgr/core": "5.2.0",
    "@svgr/plugin-jsx": "5.2.0",
    "@svgr/plugin-prettier": "5.0.1",
    "@svgr/plugin-svgo": "5.2.0",
    "fs-extra": "8.1.0",
    "glob": "7.1.6"
  }
}
