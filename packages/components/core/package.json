{
  "name": "@synerise/ds-core",
  "version": "0.43.1",
  "description": "Core Components for the Synerise Design System",
  "license": "ISC",
  "repository": "synerise/synerise-design",
  "main": "dist/js/index.js",
  "files": [
    "/dist",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run vars && npm run copy && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --delete-dir-on-start --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "copy": "node ./build/copy.js",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "pack:ci": "npm pack --pack-destination ../../storybook/storybook-static/static",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit",
    "upgrade:ds": "ncu -f \"@synerise/ds-*\" -u",
    "vars": "node ./build/vars.js"
  },
  "types": "dist/js/index.js",
  "dependencies": {
    "@synerise/ds-data-format": "^0.7.1",
    "deepmerge": "^4.2.2",
    "flat": "^5.0.2",
    "intl-messageformat-parser": "^3.6.4"
  },
  "peerDependencies": {
    "antd": "4.24.16",
    "react": ">=16.9.0 <= 18.3.1",
    "react-intl": ">=3.12.0 <= 6.8",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "hex-rgb": "^5.0.0",
    "less-vars-to-js": "^1.3.0"
  }
}
