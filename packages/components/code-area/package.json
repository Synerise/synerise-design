{
  "name": "@synerise/ds-code-area",
  "version": "1.1.7",
  "description": "CodeArea UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --delete-dir-on-start --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "pack:ci": "npm pack --pack-destination ../../storybook/storybook-static/static",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit",
    "upgrade:ds": "ncu -f \"@synerise/ds-*\" -u"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@monaco-editor/react": "4.4.6",
    "@synerise/ds-button": "^1.3.3",
    "@synerise/ds-core": "^1.3.1",
    "@synerise/ds-form-field": "^1.1.5",
    "@synerise/ds-icon": "^1.5.2",
    "@synerise/ds-inline-edit": "^1.0.13",
    "@synerise/ds-loader": "^1.0.4",
    "@synerise/ds-tooltip": "^1.1.9",
    "@synerise/ds-typography": "^1.0.10",
    "@synerise/ds-utils": "^1.2.0"
  },
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "antd": "4.24.16",
    "react": ">=16.9.0 <= 18.3.1",
    "react-intl": ">=3.12.0 <= 6.8",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "monaco-editor": "0.34.1"
  }
}
