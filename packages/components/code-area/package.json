{
  "name": "@synerise/ds-code-area",
  "version": "0.1.4",
  "description": "CodeArea UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --delete-dir-on-start --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "pack:ci": "npm pack --pack-destination ../../portal/storybook-static/static",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@synerise/ds-button": "^0.19.8",
    "@synerise/ds-core": "^0.40.14",
    "@synerise/ds-icon": "^0.60.8",
    "@synerise/ds-inline-edit": "^0.7.4",
    "@synerise/ds-input": "^0.21.1",
    "@synerise/ds-tooltip": "^0.14.26",
    "@synerise/ds-typography": "^0.15.0",
    "@synerise/ds-utils": "^0.26.4",
    "monaco-editor": "0.47.0",
    "react-monaco-editor": "^0.55.0"
  },
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "react": ">=16.9.0 < 17.0.0",
    "styled-components": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.1.1"
  }
}
