{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Synerise/synerise-design.git"
  },
  "workspaces": [
    "packages/components/*",
    "packages/portal",
    "packages/portal-plugins/*",
    "packages/storybook",
    "packages/docs-site/website"
  ],
  "scripts": {
    "bootstrap": "yarn npx:lerna bootstrap",
    "build": "yarn build:core && yarn build:all",
    "build-storybook": "cd packages/storybook && yarn build-storybook",
    "build:all": "yarn npx:lerna run build --ignore=@synerise/ds-{data-format,core}",
    "build:core": "yarn npx:lerna run build --scope=@synerise/ds-{data-format,core}",
    "component:create": "node ./scripts/create-component/index.js",
    "docs-build": "npx styleguidist build",
    "docs-dev": "npx styleguidist server",
    "docs-watch": "cd packages/docs-site/website && yarn docs-watch",
    "lerna:version": "yarn npx:lerna version --conventional-commits",
    "lint": "eslint . --ext .ts --ext .tsx --max-warnings 0",
    "npx:lerna": "npx lerna",
    "pack:ci": "npx lerna run pack --since master",
    "storybook": "yarn run build && cd packages/portal && yarn run storybook",
    "storybook-both": "yarn run storybook & yarn run storybook7",
    "storybook7": "cd packages/storybook && storybook dev -p 6006",
    "storybook:chromatic": "npx chromatic --trace-changed=expanded --storybook-base-dir=packages/storybook --storybook-config-dir=packages/storybook/.storybook --only-changed --debug --skip-update-check --exit-zero-on-changes",
    "test:ci": "npx lerna run test --stream --concurrency 3",
    "types": "yarn npx:lerna run types --parallel",
    "zeplin": "cd config/zeplin && zeplin connect"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,less}": [
      "prettier-eslint --write",
      "git add"
    ],
    "./package.json": [
      "format-package -w",
      "git add"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ],
    "packages/**/*.{md}": [
      "prettier-eslint --write",
      "git add"
    ],
    "packages/components/*/package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "4.9.1",
    "**/@typescript-eslint/parser": "4.9.1",
    "@jest/fake-timers": "^26.6.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "babel-jest": "26.6.3",
    "jest": "^26.6.3",
    "rc-util": "^5.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sortablejs": "1.15.0"
  },
  "volta": {
    "node": "16.20.2",
    "yarn": "1.22.22"
  },
  "dependencies": {
    "antd": "4.7.0",
    "invariant": "^2.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-perfect-scrollbar": "^1.5.8",
    "react-styleguidist": "^11.0.5"
  },
  "devDependencies": {
