{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Synerise/synerise-design.git"
  },
  "workspaces": [
    "packages/components/*",
    "packages/storybook"
  ],
  "scripts": {
    "bootstrap": "yarn npx:lerna bootstrap",
    "build": "yarn build:core && yarn build:all",
    "build-storybook": "cd packages/storybook && yarn build-storybook",
    "build:all": "yarn npx:lerna run build --ignore=@synerise/ds-{data-format,core}",
    "build:core": "yarn npx:lerna run build --scope=@synerise/ds-{data-format,core}",
    "component:create": "node ./scripts/create-component/index.js",
    "lerna:version": "yarn npx:lerna version --conventional-commits",
    "lint": "eslint . --ext .ts --ext .tsx --max-warnings 0",
    "npx:lerna": "npx lerna",
    "pack:ci": "npx lerna run pack:ci --since origin/master",
    "storybook": "cd packages/storybook && yarn storybook",
    "test:ci": "npx lerna run test --stream --concurrency 3",
    "types": "yarn npx:lerna run types --parallel",
    "upgrade:ds": "yarn npx:lerna run upgrade:ds"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,less}": [
      "prettier-eslint --write",
      "git add"
    ],
    "./package.json": [
      "format-package -w",
      "git add"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ],
    "packages/**/*.{md}": [
      "prettier-eslint --write",
      "git add"
    ],
    "packages/components/*/package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "4.9.1",
    "**/@typescript-eslint/parser": "4.9.1",
    "@babel/core": "7.23.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "rc-trigger": "5.3.4",
    "rc-util": "5.43.0",
    "react": "^18",
    "react-dom": "^18",
    "sortablejs": "1.15.0"
  },
  "volta": {
    "node": "18.18.2",
    "yarn": "1.22.22"
  },
  "dependencies": {
    "antd": "4.24.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-perfect-scrollbar": "^1.5.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.5",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/config-lerna-scopes": "8.3.4",
    "@formatjs/intl-pluralrules": "5.3.1",
    "@formatjs/intl-relativetimeformat": "11.4.1",
    "@jridgewell/gen-mapping": "0.3.2",
    "@testing-library/jest-dom": "6.6.2",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "^10.3.1",
    "@types/debounce": "^1.2.1",
    "@types/flat": "5.0.3",
    "@types/highlightjs": "^9.12.6",
    "@types/jest": "27",
    "@types/ramda": "^0.28.23",
    "@types/react-highlight-words": "^0.16.4",
    "@types/react-onclickoutside": "^6.7.4",
    "@types/react-window": "^1.8.5",
    "@types/resize-observer-browser": "^0.1.7",
    "@types/styled-components": "5.1.27",
    "@types/uuid": "9.0.4",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "@welldone-software/why-did-you-render": "^6.0.3",
    "babel-jest": "27",
    "babel-loader": "^8.3.0",
    "babel-plugin-transform-rename-import": "2.3.0",
    "copy-template-dir": "1.4.0",
    "css-loader": "^3.4.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-react-app": "5.2.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-standard": "4.0.1",
    "file-loader": "^6.0.0",
    "format-package": "5.2.0",
    "husky": "4.2.3",
    "inquirer": "7.1.0",
    "jest": "^27",
    "jest-environment-jsdom": "^27",
    "lerna": "3.20.2",
    "less": "3.11.1",
    "less-loader": "^5.0.0",
    "less-plugin-clean-css": "1.5.1",
    "less-plugin-npm-import": "2.1.0",
    "less-vars-loader": "1.1.0",
    "lint-staged": "10.0.8",
    "npm-check-updates": "^16",
    "prettier": "2.4.1",
    "prettier-eslint-cli": "5.0.0",
    "react-intl": "^6.8.7",
    "sass": "^1.43.4",
    "style-loader": "^1.1.3",
    "styled-components": "^5.3.3",
    "ts-jest": "27",
    "ts-loader": "^6.2.2",
    "typescript": "4.9.5"
  }
}
